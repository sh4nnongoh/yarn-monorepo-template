{
  "name": "@yarn-monorepo-template/backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.19",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "scripts": {
    "start": "yarn nodemon -w src",
    "start:prod": "yarn build && node ./build/server.js",
    "build": "yarn tsc --build && (find ./build/ -name '*.test.js' | xargs rm) && (find ./build/ -empty -type d -delete)",
    "clean": "yarn tsc --build --clean",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "yarn eslint --ext .ts src/ --fix"
  }
}
